<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="432.0" prefWidth="332.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.checkbox.Controller">
   <children>
      <CheckBox fx:id="myCheckBox" layoutX="106.0" layoutY="331.0" mnemonicParsing="false" onAction="#change" text="ON/OFF">
         <font>
            <Font size="22.0" />
         </font>
      </CheckBox>
      <Label fx:id="myLabel" layoutX="143.0" layoutY="233.0" text="OFF">
         <font>
            <Font size="27.0" />
         </font>
      </Label>
      <ImageView fx:id="myImageView" fitHeight="146.0" fitWidth="100.0" layoutX="124.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@off.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
